@model IEnumerable<DoAnLTWeb2.Models.Product>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách Món ăn</h2>
    </div>

    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Products" asp-action="Create" style="background-color:#49c1c5">
            <i class="bi bi-plus"></i>Thêm Món
        </a>
    </p>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">Thứ tự</th>
                                    <th class="col-2 text-center">Ảnh</th>
                                    <th class="col-2 text-center">Tên món</th>
                                    <th class="col-2 text-center">Loại món</th>
                                    <th class="col-2 text-center">Giá (VNĐ)</th>
                                    <th class="col-1 text-center">Ẩn/hiện</th>
                                    <th class="col-2 text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr id="tr_@item.ProductID">
                                        <td class="text-center">@(i++)</td>
                                        <td class="text-center">
                                            <img style="max-width: 50px;height: 50px;" src="@item.Image" />
                                        </td>
                                        <td class="text-center">@item.Name</td>
                                        <td class="text-center">@item.CateProduct?.Name</td>
                                        <td class="text-center">@item.Price</td>
                                        <td class="text-center"> @Html.DisplayFor(modelItem => item.IsActive)</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Products" asp-action="Edit"
                                           asp-route-id="@item.ProductID" class="btn btn-primary "
                                           title="Sửa thông tin món"><i class="bi bi-pencil-square"></i></a> |
                                            <a asp-area="Admin" asp-controller="Products" asp-action="Delete"
                                           asp-route-id="@item.ProductID" class="btn btn-danger "
                                           title="Xóa món"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>